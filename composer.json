{
  "name": "open-orchestra/open-orchestra-elastica-bundle",
  "description": "A bundle to index Open Orchestra elements with Elastica Search",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "OpenOrchestra community",
      "homepage": "https://github.com/open-orchestra/open-orchestra-elastica-bundle/graphs/contributors"
    }
  ],

  "require": {
    "php": "~5.6.0",
    "ruflin/elastica": "~2.3.1",
    "open-orchestra/open-orchestra-model-interface": "1.2.*@dev",

    "open-orchestra/open-orchestra-libs": "@dev"
  },

  "require-dev": {
    "codeclimate/php-test-reporter": "~0.3.2",
    "phake/phake": "~2.1.0",
    "phpunit/phpunit": "~4.8.0",

    "friendsofsymfony/user-bundle": "2.0.x-dev",
    "innocead/captcha-bundle": "dev-master",
    "open-orchestra/open-orchestra-cms-bundle": "1.2.*@dev",

    "open-orchestra/open-orchestra-base-api-bundle": "@dev",
    "open-orchestra/open-orchestra-base-bundle": "@dev",
    "open-orchestra/open-orchestra-bbcode-bundle": "@dev",
    "open-orchestra/open-orchestra-display-bundle": "@dev",
    "open-orchestra/open-orchestra-model-bundle": "@dev",
    "open-orchestra/open-orchestra-mongo-libs": "@dev",
    "open-orchestra/open-orchestra-user-bundle": "@dev"
  },

  "suggest": {
    "open-orchestra/open-orchestra-cms-bundle": "To be able to use the admin bundle",
    "open-orchestra/open-orchestra-front-bundle": "To be able to use the front bundle"
  },

  "extra": {
    "branch-alias": {
      "dev-master": "1.2.x-dev"
    }
  },

  "config": {
    "bin-dir": "bin"
  },

  "autoload": {
    "psr-4": {
      "OpenOrchestra\\ElasticaAdminBundle\\": "ElasticaAdminBundle/",
      "OpenOrchestra\\ElasticaAdmin\\": "ElasticaAdmin/",
      "OpenOrchestra\\ElasticaFrontBundle\\": "ElasticaFrontBundle/",
      "OpenOrchestra\\ElasticaFront\\": "ElasticaFront/",
      "OpenOrchestra\\ElasticaBundle\\": "ElasticaBundle/",
      "OpenOrchestra\\Elastica\\": "Elastica/"
    }
  }
}
